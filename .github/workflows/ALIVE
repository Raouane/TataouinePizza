name: Render Keep Alive

on:
  schedule:
    # S'exÃ©cute toutes les 10 minutes
    - cron: '*/10 * * * *'
  workflow_dispatch: # Permet de tester manuellement

jobs:
  ping:
    runs-on: ubuntu-latest
    steps:
      - name: Ping Render Server
        run: curl -s https://tataouine-pizza.onrender.com > /dev/null
